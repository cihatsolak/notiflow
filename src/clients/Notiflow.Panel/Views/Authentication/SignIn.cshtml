@inject IViewLocalizer Localizer
@model SignInInput
@{
    ViewData["Title"] = Localizer["page.title"];
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<partial name="_Head" />

<body id="kt_body" class="bg-white header-fixed header-tablet-and-mobile-fixed toolbar-enabled toolbar-fixed toolbar-tablet-and-mobile-fixed aside-enabled aside-fixed" style="--kt-toolbar-height:55px;--kt-toolbar-height-tablet-and-mobile:55px">
    <div class="d-flex flex-column flex-root">
        <div class="d-flex flex-column flex-column-fluid bgi-position-y-bottom position-x-center bgi-no-repeat bgi-size-contain bgi-attachment-fixed" style="background-size: 100% 50%;">
            <div class="d-flex flex-center flex-column flex-column-fluid p-10 pb-lg-20">
                <a href="javascript:void(0)" class="mb-12">
                    <span class="text-black-50">Notiflow İletişim Sistemleri Ltd. Şti.</span>
                </a>
                <div class="w-lg-500px bg-white rounded shadow-sm p-10 p-lg-15 mx-auto">
                    <form asp-action="SignIn" asp-route-returnurl="@ViewData["ReturnUrl"]" class="form w-100" id="kt_sign_in_form">
                        <div class="text-center mb-10">
                            <h1 class="text-dark mb-3">Notiflow</h1>
                        </div>
                        <h1>@ViewBag.Test</h1>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="fv-row mb-10">
                            <label asp-for="Username" class="form-label fs-6 fw-bolder text-dark"></label>
                            <input asp-for="Username" class="form-control form-control-lg form-control-solid" />
                        </div>
                        <div class="fv-row mb-10">
                            <div class="d-flex flex-stack mb-2">
                                <label asp-for="Password" class="form-label fw-bolder text-dark fs-6 mb-0"></label>
                            </div>
                            <input asp-for="Password" class="form-control form-control-lg form-control-solid" />
                        </div>
                        <div class="fv-row mb-10">
                            <label class="form-check form-check-custom form-check-solid">
                                <input class="form-check-input" asp-for="RememberMe" type="checkbox" />
                                <span class="form-check-label fw-bold text-gray-700 fs-6">
                                    @Html.DisplayNameFor(model => model.RememberMe)
                                </span>
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-lg btn-primary btn-block fw-bolder me-3 my-2">
                                <span class="indicator-label">@Localizer["signin.button.text"]</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <partial name="_AuthScript" />
   @*  <partial name="_ValidationGoogleCaptcha" model='new { FormId = "kt_sign_in_form" }' /> *@
</body>
</html>
