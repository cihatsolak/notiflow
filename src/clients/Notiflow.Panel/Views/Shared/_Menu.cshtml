@inject IViewLocalizer Localizer

<div class="aside-menu flex-column-fluid">
    <div class="hover-scroll-overlay-y my-5 my-lg-5" id="kt_aside_menu_wrapper" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}" data-kt-scroll-height="auto" data-kt-scroll-dependencies="#kt_aside_logo, #kt_aside_footer" data-kt-scroll-wrappers="#kt_aside_menu" data-kt-scroll-offset="0">
        <div class="menu menu-column menu-title-gray-800 menu-state-title-primary menu-state-icon-primary menu-state-bullet-primary menu-arrow-gray-500" id="#kt_aside_menu" data-kt-menu="true">
            <div class="menu-item">
                <a class="menu-link @IsActiveMenu("Home")" href="/">
                    <span class="menu-icon">
                        <i class="fas fa-tachometer-alt fs-3"></i>
                    </span>
                    <span class="menu-title">@Localizer["menu.dashboard"]</span>
                </a>
            </div>
            <div class="menu-item">
                <div class="menu-content pt-8 pb-2">
                    <span class="menu-section text-muted text-uppercase fs-8 ls-1">Profil/Cihaz Yönetimi</span>
                </div>
            </div>
            <div data-kt-menu-trigger="click" class="menu-item menu-accordion">
                <div class="menu-item">
                    <a href="@Url.Action(nameof(CustomerController.Index), "Customer")" class="menu-link @IsActiveMenu("Customer")">
                        <span class="menu-icon">
                            <i class="fa-solid fa-users fs-3"></i>
                        </span>
                        <span class="menu-title">@Localizer["menu.customers"]</span>
                    </a>
                </div>
                <div class="menu-item">
                    <a href="@Url.Action(nameof(DeviceController.Index), "Device")" class="menu-link @IsActiveMenu("Device")">
                        <span class="menu-icon">
                            <i class="fa-solid fa-mobile-screen-button fs-2 mx-1"></i>
                        </span>
                        <span class="menu-title">@Localizer["menu.devices"]</span>
                    </a>
                </div>
            </div>
            <div class="menu-item">
                <div class="menu-content pt-8 pb-2">
                    <span class="menu-section text-muted text-uppercase fs-8 ls-1">İletişim Yönetimi</span>
                </div>
            </div>
            <div data-kt-menu-trigger="click" class="menu-item menu-accordion">
                <div class="menu-item">
                    <a href="@Url.Action(nameof(TextMessageController.Index), "TextMessage")" class="menu-link @IsActiveMenu("TextMessage")">
                        <span class="menu-icon">
                            <i class="fa-solid fa-comment-sms fs-2"></i>
                        </span>
                        <span class="menu-title">@Localizer["menu.text.message"]</span>
                    </a>
                </div>
            </div>
            <div data-kt-menu-trigger="click" class="menu-item menu-accordion">
                <div class="menu-item">
                    <a href="@Url.Action(nameof(EmailController.Index), "Email")" class="menu-link @IsActiveMenu("Email")">
                        <span class="menu-icon">
                            <i class="fa-solid fa-envelope fs-3"></i>
                        </span>
                        <span class="menu-title">@Localizer["menu.email"]</span>
                    </a>
                </div>
            </div>
            <div data-kt-menu-trigger="click" class="menu-item menu-accordion">
                <div class="menu-item">
                    <a href="@Url.Action(nameof(NotificationController.Index), "Notification")" class="menu-link @IsActiveMenu("Notification")">
                        <span class="menu-icon">
                            <i class="fa-solid fa-bell fs-2"></i>
                        </span>
                        <span class="menu-title">@Localizer["menu.notification"]</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string IsActiveMenu(string actionName)
    {
        string existingName = Context.Request.RouteValues.Values.ToArray()[0].ToString();
        if (string.Equals(actionName, existingName, StringComparison.OrdinalIgnoreCase))
            return "active";

        return string.Empty;
    }
} 